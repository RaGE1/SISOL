#include <cmath>
#include <cstdio>
#include <vector>
#include <stack>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int t;
    cin>>t;
    while(t--)
    {
     long long   int c,area,n,a[1000000],i,smax=0,j;
        stack<long long int>s;
        
        cin>>n;
        for(i=1;i<=n;i++)
            cin>>a[i];i=1;
      while(i<=n)
      {
          if(s.empty() || a[i]>=a[s.top()])
          {
              s.push(i);
              i++;
          }
          else
          {
              c=s.top();
              s.pop();
              if(s.empty())
              {
                  area=a[c]*(i-1);
              }
              else
                  area=a[c]*(i-s.top()-1);
              if(smax<area)
                 smax=area;
          }
      }
        while(!s.empty())
        {
            c=s.top();
              s.pop();
              if(s.empty())
              {
                  area=a[c]*(i-1);
              }
              else
                  area=a[c]*(i-s.top()-1);
              if(smax<area)
                  smax=area;
            
        }
        cout<<smax<<"\n";
    }
}
