#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int t,n;
    cin>>t;
    int z=0;
    while(t--)
    {
        cin>>n;
        cout<<"Case #"<<++z<<":"<<endl;
        for(int i=0;i<=n/2;i++)
        {
            for(int j=0;j<n/2-i;j++)cout<<" ";
            for(int j=0;j<2*i+1;j++)
            {
                if(j==0||j==2*i)cout<<"*";
                else cout<<" ";
                
            }
            cout<<endl;
        }
        for(int i=n/2-1;i>=0;i--)
        {
            for(int j=0;j<n/2-i;j++)cout<<" ";
            for(int j=0;j<2*i+1;j++)
            {
                if(j==0||j==2*i)cout<<"*";
                else cout<<" ";
                
            }
            cout<<endl;
        }
        
    }
    return 0;
}
