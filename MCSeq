#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int cmpfunc (const void * a, const void * b) {
   return ( *(int*)a - *(int*)b );
}

int main() {

    int t;
    scanf("%d",&t);
    while(t--)
    {
        int n,max=0,i,j,a[100000],c;
        scanf("%d",&n);
        for(i=0;i<n;i++)
            scanf("%d",&a[i]);
        qsort(a,n,sizeof(int),cmpfunc);
        for(i=0;i<n;i++)
        {
            j=i;c=0;
            while(j<n-1 && (a[j+1]-a[j]==1 || a[j+1]-a[j]==0) )
            {
                if(a[j+1]-a[j]==0)
                    c++;
                j++;
            }
            if(j-i-c>max)
                max=j-i-c;
            i=j;
        }
      //  if(max>0 )
        //    max=max+1;
        
            
        printf("%d\n",max+1);
    }
    return 0;
}
