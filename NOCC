#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
#include<bits/stdc++.h>
using namespace std;


int vis[10000];

void dfs(int node,vector<int>v[])
{
    vis[node]=1;
    for(int i=0;i<(int)v[node].size();i++)
        if(!vis[v[node][i]])
                dfs(v[node][i],v);
}
int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    int t;
    cin>>t;
    while(t--)
    {vector<int> v[10000];
        int n,m,i,c=0,a,b;
        cin>>n>>m;
        for(i=0;i<m;i++)
        {
            cin>>a>>b;
            v[a].push_back(b);
            v[b].push_back(a);
            
        }
        for(i=1;i<=n;i++)
        {
            if(!vis[i]){
                dfs(i,v);c++;}
        }
        cout<<c<<"\n";
        for(i=0;i<10000;i++)
            vis[i]=0;

    }
    return 0;
}

