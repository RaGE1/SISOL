#include <bits/stdc++.h>
#define ll long long int
using namespace std;
ll sum (ll a[], ll b[], ll i, ll n){
    ll ene = 0, c = 1;
    while( i<n){
        ene += b[i ];
        ene -= a[i ];
        if( ene < 0 )
            return i;
        i++;
    
    }
     return n;
}
int main() {
 ios_base::sync_with_stdio(0); cin.tie(0);
    ll t;
    cin>>t;
    while(t--){
        
        ll n, f = 0;
        cin >> n;
        ll a[n+1], b[n+1],i1,sum1=0,sum2=0;
        for (ll i = 0; i < n; i++)
            cin >> a[i],sum1+=a[i];
        for (ll i = 0; i < n; i++)
            cin >> b[i],sum2+=b[i];
        if(sum1>sum2)
            cout<<"-1\n";
        else{
        for ( ll i = 0; i < n; i++)
        {
            if( a[i] <= b[i])
            {i1=sum (a, b, i, n);
            if(i1==n)
            {
                cout << i+1 << "\n";
              
                break;
            }
             else
                 i=i1;
            }
        }}
     
        
    }
    return 0;
}
